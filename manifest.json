{
  "service": {
    "name":"learn-spring-kotlin",
    "versionFile":"./version.txt"
  },
  "gradle":{
    "exe":"./gradlew",
    "build":"build -x test"
  },
  "docker": {
    "compose": {
      "up":"-f docker/docker-compose.yml up",
      "down":"-f docker/docker-compose.yml down"
    },
    "app": {
      "build":"-f docker/app/Dockerfile .",
      "imageTagPrefix": {
        "local":"local/",
        "remote":"docker.io/bastman77/"
      }
    }
  },
  "k8s": {
    "concern":{
      "dev": {
        "k8sContext":"minikube",
        "k8sApp":"learn-spring-kotlin-app-dev",
        "k8sDeployment":"learn-spring-kotlin-app-dev",
        "deployment": {
          "create":"create -f ./k8s/app/app-dev/deployment.yml --save-config",
          "apply":"apply -f ./k8s/app/app-dev/deployment.yml --record",
          "export":"-o yaml > ./k8s/app/app-dev/deployment.export.yml",
          "patch":{
            "patchFile":"./k8s/app/app-dev/deployment.yml",
            "args":"--record"
          }
        }
      },
      "prod": {
        "k8sContext":"minikube",
        "k8sApp":"learn-spring-kotlin-app-prod",
        "k8sDeployment":"learn-spring-kotlin-app-prod",
        "deployment": {
          "create":"create -f ./k8s/app/app-prod/deployment.yml --save-config",
          "apply":"apply -f ./k8s/app/app-prod/deployment.yml --record",
          "export":"-o yaml > ./k8s/app/app-prod/deployment.export.yml",
          "patch":{
            "patchFile":"./k8s/app/app-dev/deployment.yml",
            "args":"--record"
          }
        }
      }
    }
  }
}