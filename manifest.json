{
  "service": {
    "name":"learn-spring-kotlin",
    "versionFile":"./version.txt"
  },
  "gradle":{
    "exe":"./gradlew",
    "build":"build -x test"
  },
  "docker": {
    "compose": {
      "up":"-f docker/docker-compose.yml up",
      "down":"-f docker/docker-compose.yml down"
    },
    "app": {
      "build":"-f docker/app/Dockerfile .",
      "imageTagPrefix": {
        "local":"local/",
        "remote":"docker.io/bastman77/"
      }
    }
  },
  "k8s": {
    "concern":{
      "dev": {
        "k8sContext":"minikube",
        "k8sApp":"learn-spring-kotlin-app-dev",
        "k8sDeployment":"learn-spring-kotlin-app-dev",
        "k8sDeploymentFile":"./k8s/app/app-dev/deployment.yml"
      },
      "prod": {
        "k8sContext":"minikube",
        "k8sApp":"learn-spring-kotlin-app-prod",
        "k8sDeployment":"learn-spring-kotlin-app-prod",
        "k8sDeploymentFile":"./k8s/app/app-prod/deployment.yml"
      }
    }
  }
}